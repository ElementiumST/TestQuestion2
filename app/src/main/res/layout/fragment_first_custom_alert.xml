<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.first.view.FirstCustomAlertFragment" >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginHorizontal="32dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="32dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_check" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_margin="8dp"
                style="@style/BlackTitleTextView"
                android:text="Custom Alert" />

            <include
                android:id="@+id/pointPart"
                layout="@layout/part_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:paddingHorizontal="72dp"
                android:background="@drawable/button_dialog_close"
                style="@style/MainButton"
                android:layout_marginTop="48dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/close" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>