<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rootContainer"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/pointContainer"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        app:cardCornerRadius="100dp"
        app:cardElevation="4dp">

        <View
            android:id="@+id/point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@drawable/point_first_shape" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/pointTitle"
        style="@style/BlackBodyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        tools:text="@string/fist"
        app:layout_constraintEnd_toEndOf="@+id/firstPointContainer"
        app:layout_constraintStart_toStartOf="@+id/firstPointContainer"
        app:layout_constraintTop_toBottomOf="@+id/firstPointContainer" />
</LinearLayout>